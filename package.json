{
  "name": "@pkgtoolsjs/template-vue-ts",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "node -e \"try{require('./scripts/postinstall.js')}catch(e){}\"",
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test:unit": "vitest",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint --fix .",
    "format": "prettier --write ."
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{htm?(l),css,scss,sass,less,js?(x),json,md}": [
      "prettier --write"
    ],
    "*.ts?(x),vue": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "author": "pkgtoolsjs",
  "repository": {
    "url": "git+https://github.com/pkgtoolsjs/template-vue-ts.git"
  },
  "license": "MIT",
  "dependencies": {
    "pinia": "^3.0.3",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^24.8.1",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vitest/eslint-plugin": "^1.3.23",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.8.1",
    "eslint": "^9.38.0",
    "eslint-plugin-vue": "~10.5.1",
    "execa": "^9.6.0",
    "is-ci": "^4.1.0",
    "jiti": "^2.6.1",
    "jsdom": "^27.0.1",
    "less": "^4.4.2",
    "lint-staged": "^16.2.4",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "simple-git-hooks": "^2.13.1",
    "typescript": "~5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "unplugin-vue-components": "^29.1.0",
    "unplugin-vue-router": "^0.16.0",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-vue-devtools": "^8.0.3",
    "vitest": "^4.0.0-beta.16",
    "vue-tsc": "^3.1.1"
  }
}
